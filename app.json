{
  "expo": {
    "name": "Whirl",
    "slug": "Whirl",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/logos/icon.png",

    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "whirl",

    "splash": {
      "image": "./assets/logos/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#461D7C"
    },

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "package": "whirl://reset-password",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logos/adaptive-icon.png",
        "backgroundColor": "#461D7C"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [
            {
              "scheme": "whirl"
            }
          ]
        }
      ]
    },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "favicon": "./assets/logos/favicon.png"
    },

    "plugins": [
      "expo-font"
    ]
  }